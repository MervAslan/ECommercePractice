@model List<Product>
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class=col-12 text-center"></div>
            <h2 class="text-white py-2 text-center">Product List</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-6 pb-3">
                
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Product
                </a>
            </div>
        </div>



        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) //display order a göre sırala
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.ISBN
                        </td>
                        <td>
                            @item.ListPrice
                        </td>
                        <td>
                            @item.Author
                        </td>
                        
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <!--divin genişliğini %75 yapar-->
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-primary mx-2">
                                    <!--parmetre olarak categoryId yi gönderiyoruz burda-->
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>


